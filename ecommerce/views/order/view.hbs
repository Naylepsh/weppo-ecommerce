<!-- Cart view section -->
<section id="cart-view">
    <div class="container">
        <div class="row">
        <div class="col-md-12">
            <div class="cart-view-area">
            <div class="cart-view-table">
                <form action="" method="">
                <div class="table-responsive">
                        <table class="table">
                        <thead>
                            <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each cart.lines}}
                            <tr>
                                <td><a class="aa-cart-title" href="/products/{{product.key}}">{{product.name}}</a></td>
                                <td>{{product.price}} zł</td>
                                <!-- quantities[key] doesnt quite work -- result will be literal 'quantities[123...]'
                                instead of quatities { '123' -> 1, '231' -> 7, and so on.. } -->
                                <td><input class="aa-cart-quantity" type="number" min="1" value="{{quantity}}" name="quantities[{{product.key}}]"></td>
                                <td>{{total}} zł</td>
                            </tr>
                            {{/each}}
                            </tbody>
                        </table>
                </div>
                </form>
                <!-- Cart Total view -->
                <div class="cart-view-total">
                <h4>Cart Totals</h4>
                <table class="aa-totals-table">
                    <tbody>
                    <tr>
                        <th>Total</th>
                        <td>{{cart.totalValue}} zł</td>
                    </tr>
                    </tbody>
                </table>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->