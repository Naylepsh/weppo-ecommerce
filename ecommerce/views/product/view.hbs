<section id="aa-product-details">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-product-details-area">
                    <div class="aa-product-details-content">
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-12">                              
                                <a class="aa-product-img" href="#">
                                    <div>
                                        <img src="https://picsum.photos/270/300" alt="{{product.name}}">
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                <div class="aa-product-view-content">
                                    <h3>{{product.name}}</h3>
                                    <div class="aa-price-block">
                                        <span class="aa-product-view-price">{{product.price}} z≈Ç</span>
                                        <p class="aa-product-avilability">Avilability: <span>In stock</span></p>
                                    </div>
                                    <p class="aa-product-short-descrip">{{product.description}}</p>
                                    <p class="aa-prod-category">
                                            Category: <a href="/products/{{product.category}}">{{product.category}}</a>
                                    </p>
                                    <div class="aa-prod-view-bottom">
                                        <a class="aa-add-to-cart-btn" href="/cart/add/{{product.key}}">Add To Cart</a>
                                        {{#if user.isAdmin}}
                                        <a class="aa-add-to-cart-btn" href="/cart/edit/{{product.key}}">Modify</a>
                                        <a class="aa-add-to-cart-btn" href="/cart/destroy/{{product.key}}">Delete</a>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="aa-product-details-bottom">
                        <ul class="nav nav-tabs" id="myTab2">
                            <li class="active">
                                <h5>Description</h5>
                            </li>              
                        </ul>
                        <div>
                            <div class="" id="description">
                                <p>{{product.description}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>