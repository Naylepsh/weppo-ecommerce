<section id="aa-myaccount">
   <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">         
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>{{title}}</h4>
                                <form action="" method="POST" class="aa-login-form">
                                    <label for="">Name<span>*</span></label>
                                    <input type="text" placeholder="Name" value="{{product.name}}">
                                    <label for="">Price (z≈Ç)<span>*</span></label>
                                    <input type="text" placeholder="0.00" value="{{product.price}}">
                                    <label for="">Category<span>*</span></label>
                                    <input type="text" placeholder="Category" value="{{product.category}}">
                                    <label for="">Description</label>
                                    <textarea name="" id="">{{product.description}}</textarea>
                                    <button type="submit" class="aa-browse-btn">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>          
                </div>
            </div>
        </div>
   </div>
</section>