 <!-- cart box -->
<div class="">
    <div>
        <a class="btn btn-sm btn-secondary navbar-btn" href="/cart">
            <i class="fa fa-shopping-cart"></i>
        </a>
    </div>
    {{# if cart.lines.length }}
        <small class="navbar-text">
            <b>Your cart:</b>
            {{cart.totalQuantity}} item(s)
            {{cart.totalValue}} zł
        </small>
    {{/if}}
    
</div>
<!-- / cart box -->

<!-- Products section -->
<section id="aa-product">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="aa-product-area">
                        <div class="aa-product-inner">
                            <!-- Tab panes -->
                            <div class="tab-content">
                            <!-- Start men product category -->
                                <div class="tab-pane active">
                                    <ul class="aa-product-catg">
                                    <!-- start single product item -->
                                        {{#each productlist}}
                                        <li>
                                            <figure>
                                                <a class="aa-add-card-btn"href="/cart/add/{{key}}"><span class="fa fa-shopping-cart"></span>Add To Cart</a>
                                                <figcaption>
                                                    <h4 class="aa-product-title"><a href="#">{{name}}</a></h4>
                                                    <p class="aa-product-descrip">{{description}}</p>
                                                    <span class="aa-product-price">{{price}} zł</span>
                                                </figcaption>
                                            </figure>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

